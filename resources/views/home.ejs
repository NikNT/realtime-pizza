    <section class="hero py-16">

        <div class="container mx-auto flex items-center justify-between" style="margin-left: 10px;">

            <div class="w-1/2 ml-4">

                <h6 class="text-lg ml-16"><em>Are you hungry?</em></h6>
                <h1 class="text-6xl font-bold ml-16">Don't Wait!</h1>
                <button class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary ml-16">Order Now!</button>

            </div>
            <div class="w-1/2">

                <img class="ml-32" src="/img/hero-pizza.png" alt="hero-image">

            </div>

        </div>


    </section>

    <section class="menu container mx-auto py-8" style="margin-left: 10px; margin-right: 10px;">

        <h1 class="text-xl font-bold mb-8 ml-44">All Pizzas!</h1>

        <div class="ml-32 grid grid-cols-4 gap-8">

            <% pizzas.forEach(function(pizza){ %> 

                <div class="w-64">

                    <img class = "h-40 mb-4 mx-auto" src="/img/<%= pizza.image %>" alt="Pizza 1">
    
                    <div class="text-center">
    
                        <h2 class="mb-4 text-lg"> <%= pizza.name %> </h2>
                        <span class=" size py-1 px-4 rounded-full uppercase text-xs">Small</span>
    
                        <div class="flex items-center justify-around mt-6">
    
                            <span class="font-bold text-lg"> â‚¹ <%= pizza.price %> </span>
    
                            <button data-pizza="<%= JSON.stringify(pizza) %>" class="add-to-cart py-1 px-6 rounded-full flex items-center">
    
                                <span>+</span>
                                <span class="ml-4">Add</span>
    
                            </button>
    
                        </div>
    
                    </div>    
    
                </div>


            <% }) %>

            
        </div>


    </section>
