<section class="cart py-16">

    <% if(session.cart) {%>

    <div class="order container mx-auto w-1/2"> 

        <div class="flex items-center border-b boder-gray-300 pb-4"> 

            <img src="/img/cart-black.png" alt="cart-image">

            <h1 class="text-2xl font-bold ml-4"> Order Summary </h1>

        </div>

        <div class="pizza-list">

            <% for(let pizza of Object.values(session.cart.items)) { %>

            <div class="flex items-center my-8">

                <img class="w-24" src="/img/<%= pizza.item.image %>" alt="pizza in list">

                <div class="flex-1 ml-4">

                    <h1><%= pizza.item.name %></h1>
                    <span><%= pizza.item.size %></span>

                </div>

                <span class="flex-1"> <%= pizza.qty%> Pcs </span>
                <span class="font-bold text-lg"> $ <%= pizza.item.price * pizza.qty %> </span>

            </div>

            <% } %>

        </div>

        <hr> 

        <div class="text-right py-4">

            <div>

                <span class="text-lg font-bold">Total Amount: </span>
                <span class="amount text-2xl font-bold ml-2">$<%= session.cart.totalPrice %></span>

            </div>

            <div>

                <form action="" class="py-4">

                    <input type="text" name="phone" id="phone" class="border border-gray-400 p-2 w-1/2 mb-4" placeholder="Phone Number">

                    <input type="text" name="address" id="address" class="border border-gray-400 p-2 w-1/2" placeholder="Address">

                    <div>

                    <button class="btn btn-primary rounded-full text-white font-bold mt-6 px-6 py-2" type="submit">Order Now! </button>

                    </div>

                </form>

            </div>

            <a href="" class="inline-block cursor-pointer px-6 py-2 btn btn-primary rounded-full text-white font-bold mt-6">Login to Continue!</a>

        </div>

    </div>

    <%} else {%>

   <div class="empty-cart container mx-auto text-center py-16">

            <h1 class="text-3xl font-bold mb-2 mt-4">Cart Empty! ðŸ˜•</h1>

            <p class="text-gray-500">You probably haven't ordered a pizza yet. 

                <br> 
            
            Head to Home Page and Get Yourself a Delicious Pizza!

            </p>

            <img class = "mx-auto w-2/5 mt-4" src="/img/empty-cart.png" alt="empty-cart">

            <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12"> Go Back </a>

        </div> 

      <% } %>  

</section>